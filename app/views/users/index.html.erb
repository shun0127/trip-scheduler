<div class="mb-1">
    <%= form_with url: users_path, method: :get, local: true do |f| %>
        <%= f.text_field :name ,placeholder: "ユーザ名"%>
        <%= f.submit "検索"%>
    <% end %>
</div>
<div class="row">
    <% @users.each do |user| %>
        <div class = "card col-sm-3 mb-1" >
            <div class="card-header">
                <h3 class="card-title"><%= user.name %></h3>
            </div>
            <div class="card-body">
                <%= link_to "プラン一覧", user, class: 'btn btn-success btn-sm' %>
            </div>
        </div>
    <% end %>
    <%= paginate @users %>
</div>