<div class="row">
  <% plans.each do |plan| %>
    <% user = User.find(plan.user_id)%>
    <% if plan.open == 1 && call_from =="index" %>
    <% open="※公開中" %>
    <% end %>
    <div class = "card col-sm-4 mb-1" >
      <div class="card-header">
        <h3 class="card-title"><%= plan.title %><%= open %></h3>
      </div>
      <div class="card-body">
        <% unless call_from == "index"%>
          <div> 
              ユーザ：<%=  user.name %> 
          </div>
        <% end %>
        <% if call_from == "ranking"%>
          <div> 
                お気に入り数：<%=  plan.favorites.count %> 
          </div>
        <% end %>
        <div>
          <p class="mb-0">概要　　：<%= plan.content %></p>
          <p class="mb-0">最終目的地　　：<%= plan.destination %></p>
        </div>
        <span class="text-muted">posted at <%= plan.created_at %></span>
        <div>
            <%= link_to "Read More", plan, class: 'btn btn-success btn-sm' %>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate plans %>
</div>