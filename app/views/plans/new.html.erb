<div class="text-center">
    <h1>新規旅行プラン作成</h1>
</div>
<div class="row">
    <div class="col-sm-10 offset-sm-1">
        
        <%= form_with(model: @plan, local: true) do |f| %>
           <%= render 'plan_fields', f: f%>
            <hr>
            <div class="schedule" id="schedule_info">
                <%= f.fields_for :schedules do |t| %>
                    <%= render 'schedule_fields', f: t %>
                <% end %>
            </div>
            <div class="links mb-1">
                <%= link_to_add_association "追加", f, :schedules ,class: 'btn btn-info btn-sm' %>
            </div>
       
            
            <%= f.submit '作成', class: 'btn btn-primary btn-block' %>
        <% end %>
    </div>
</div>